package com.cos.springboot.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.cos.springboot.dto.ResponseData;

@Controller
@RequestMapping("/home")
public class HomeController {

	// localhost:8080/home/
	// localhost:8080/home
	@GetMapping({ "", "/" })
	public String Home() {
		return "home";
	}

	// localhost:8080/home/hello
	@GetMapping("/hello")
	public String hello_get() {
		System.out.println("왔니?");
		return "hello";
	}
	
	@PostMapping("/hello")
	public @ResponseBody ResponseData hello_post() {
		// DB insert
		return new ResponseData(200, "ok");
	}
	
	@DeleteMapping("/hello")
	public @ResponseBody ResponseData hello_delete() {
		
		return new ResponseData(200, "ok");
	}
}
